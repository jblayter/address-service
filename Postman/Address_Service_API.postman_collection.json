	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Generate a unique correlation ID for each request if not already set",
					"if (!pm.collectionVariables.get('correlationId')) {",
					"    pm.collectionVariables.set('correlationId', pm.variables.replaceIn('{{$guid}}'));",
					"}"
				]
			}
		}
