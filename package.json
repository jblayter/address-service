{
  "name": "address-service",
  "version": "1.0.0",
  "description": "Address service API built with TypeScript and Fastify",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "docker-compose up address-service",
    "start:dev": "docker-compose --profile dev up address-service-dev",
    "stop": "docker-compose down",
    "stop:dev": "docker-compose --profile dev down",
    "restart": "docker-compose restart address-service",
    "restart:dev": "docker-compose --profile dev restart address-service-dev",
    "logs": "docker-compose logs -f address-service",
    "logs:dev": "docker-compose --profile dev logs -f address-service-dev",
    "monit": "docker-compose exec address-service pm2 monit",
    "monit:dev": "docker-compose --profile dev exec address-service-dev pm2 monit",
    "delete": "docker-compose down -v",
    "delete:dev": "docker-compose --profile dev down -v",
    "dev": "docker-compose --profile dev up address-service-dev --build",
    "dev:down": "docker-compose --profile dev down",
    "dev:logs": "docker-compose --profile dev logs -f address-service-dev --lines 100",
    "dev:container": "NODE_OPTIONS=\"--require @opentelemetry/auto-instrumentations-node/register\" ts-node-dev --respawn --transpile-only --poll src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker-compose build",
    "docker:build:dev": "docker-compose build address-service-dev",
    "docker:clean": "docker-compose down -v --rmi all",
    "pm2:status": "docker-compose exec address-service pm2 status",
    "pm2:status:dev": "docker-compose --profile dev exec address-service-dev pm2 status",
    "pm2:logs": "docker-compose exec address-service pm2 logs",
    "pm2:logs:dev": "docker-compose --profile dev exec address-service-dev pm2 logs"
  },
  "keywords": [
    "address",
    "api",
    "typescript",
    "fastify"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@opentelemetry/auto-instrumentations-node": "^0.41.0",
    "axios": "^1.10.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.2.3",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.2.2"
  }
}
